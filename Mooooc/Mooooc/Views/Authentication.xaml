<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mooooc.Views.Authentication">
  <StackLayout  VerticalOptions="Center" Padding="60"  >
    <Label Text="Authentication"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           FontSize="30"
           TextColor="Maroon"
           />
    <Entry x:Name="Username" Placeholder="username"></Entry>
    <Entry x:Name="Password" Placeholder="Mot de passe" IsPassword="true"></Entry>
    <Button Text="Se connecter" FontSize="15" BackgroundColor="Maroon" HorizontalOptions="Center" TextColor="White" Clicked="Button_OnClicked" />
  </StackLayout>
</ContentPage>